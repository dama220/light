<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Lighting Fixture Calculator</title>
    <style>
        body { font-family: Arial, sans-serif; background: #f4f6f8; }
        .container { background: #fff; max-width: 480px; margin: 60px auto; padding: 32px 24px; border-radius: 12px; box-shadow: 0 2px 16px #cfd8dc44; }
        label, select, input { display: block; width: 100%; margin-bottom: 16px; }
        label { margin-bottom: 8px; font-weight: bold; }
        button { padding: 10px 20px; background: #29347a; color: #fff; border: none; border-radius: 5px; font-size: 16px; cursor: pointer; }
        button:hover { background: #1d264f; }
        #result { margin-top: 28px; font-size: 18px; font-weight: bold; color: #2a5234; }
        h2 { text-align: center; color: #263238; }
    </style>
</head>
<body>
    <div class="container">
        <h2>Lighting Fixture Calculator</h2>
        <label for="area-type">Room Area Type</label>
        <select id="area-type">
            <option value="living-room">Living Room</option>
            <option value="bedroom">Bedroom</option>
            <option value="office">Office</option>
            <option value="kitchen">Kitchen</option>
            <option value="bathroom">Bathroom</option>
        </select>

        <label for="length">Room Length (m)</label>
        <input id="length" type="number" step="0.1" min="1" placeholder="Enter length">

        <label for="width">Room Width (m)</label>
        <input id="width" type="number" step="0.1" min="1" placeholder="Enter width">

        <label for="fixture-type">Fixture Type</label>
        <select id="fixture-type">
            <option value="downlight">Downlight</option>
            <option value="cob">COB Light</option>
            <option value="panel">Panel Light</option>
            <option value="spot">Spot Light</option>
            <option value="surface">Surface Light</option>
            <option value="batten">Batten Light</option>
        </select>

        <label for="wattage">Fixture Wattage</label>
        <select id="wattage">
            <option value="8">8W</option>
            <option value="12">12W</option>
            <option value="18">18W</option>
            <option value="24">24W</option>
            <option value="40">40W</option>
        </select>

        <button type="button" onclick="calculateFixtures()">Calculate Fixtures</button>
        <div id="result"></div>
    </div>

    <script>
        function calculateFixtures() {
            const areaType = document.getElementById('area-type').value;
            const length = parseFloat(document.getElementById('length').value);
            const width = parseFloat(document.getElementById('width').value);
            const wattage = parseInt(document.getElementById('wattage').value);

            if (isNaN(length) || isNaN(width) || length <= 0 || width <= 0) {
                document.getElementById('result').textContent = "Please enter valid room dimensions.";
                return;
            }

            const luxTable = {
                "living-room": 150,
                "bedroom": 100,
                "office": 300,
                "kitchen": 300,
                "bathroom": 200
            };
            const requiredLux = luxTable[areaType];
            const area = length * width;
            const totalLumensRequired = requiredLux * area;
            const lumensPerFixture = wattage * 100;
            const fixturesNeeded = Math.ceil(totalLumensRequired / lumensPerFixture);

            document.getElementById('result').textContent =
                `You need ${fixturesNeeded} fixture(s) of ${wattage}W (${lumensPerFixture} lumens each) for this ${areaType.replace("-", " ")}.`;
        }
    </script>
</body>
</html>
